# Knowledge Graph Platform - Environment Variables

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=test1234

# Optional: Fuseki (RDF/SPARQL)
FUSEKI_URL=http://localhost:3030
FUSEKI_DATASET=kg

# API
API_HOST=0.0.0.0
API_PORT=8000
GRAPHQL_PORT=4000

# LLM Extraction
OPENAI_API_KEY=your-openai-key-here
SPACY_MODEL=en_core_web_sm

# Monitoring
HEALTH_CHECK_INTERVAL=3600
SNAPSHOT_DIR=~/.kg-snapshots
